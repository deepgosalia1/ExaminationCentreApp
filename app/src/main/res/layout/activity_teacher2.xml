<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.droids.user.examinationcentre.Teacher2Activity">

    <ImageView
        android:id="@+id/Student_photo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/studentdetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/std_name_teach_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Student_photo"
        android:layout_marginStart="46dp"
        android:layout_marginTop="42dp"
        android:text="Name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/name_stnt_verify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/std_name_teach_verify"
        android:layout_alignBottom="@+id/std_name_teach_verify"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/std_name_teach_verify"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/studentdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="Student Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />
</android.widget.RelativeLayout>
